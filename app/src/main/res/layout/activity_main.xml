<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">

    <TextView android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/result_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#263238"
        android:textColor="#ffffff"
        android:textSize="30dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="7"
        android:id="@+id/button_7"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/result_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_8"
        android:layout_toRightOf="@+id/button_7"
        android:layout_toEndOf="@+id/button_7"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button_7"
        android:layout_alignBottom="@+id/button_7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_9"
        android:layout_toRightOf="@+id/button_8"
        android:layout_toEndOf="@+id/button_8"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button_8"
        android:layout_alignBottom="@+id/button_8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/button_4"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_below="@+id/button_7"
        android:layout_alignRight="@id/button_7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_5"
        android:layout_toRightOf="@+id/button_4"
        android:layout_toEndOf="@+id/button_4"
        android:layout_alignRight="@id/button_8"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button_4"
        android:layout_alignBottom="@+id/button_4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_6"
        android:layout_toRightOf="@+id/button_5"
        android:layout_toEndOf="@+id/button_5"
        android:layout_alignRight="@id/button_9"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button_5"
        android:layout_alignBottom="@+id/button_5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/button_1"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_below="@+id/button_4"
        android:layout_alignRight="@id/button_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_2"
        android:layout_toRightOf="@+id/button_1"
        android:layout_toEndOf="@+id/button_1"
        android:layout_alignRight="@id/button_5"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button_1"
        android:layout_alignBottom="@+id/button_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_3"
        android:layout_toRightOf="@+id/button_2"
        android:layout_toEndOf="@+id/button_2"

        android:layout_alignRight="@id/button_6"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button_2"
        android:layout_alignBottom="@+id/button_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/button_0"
        android:layout_below="@+id/button_1"
        android:background="#263238"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/button_2"
        android:layout_alignEnd="@id/button_2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_equals"
        android:layout_alignTop="@+id/button_0"
        android:layout_toRightOf="@+id/button_0"
        android:layout_alignRight="@+id/button_3"
        android:layout_alignEnd="@+id/button_3"
        android:layout_alignBottom="@+id/button_0"
        android:background="#263238"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/button_plus"
        android:layout_alignTop="@+id/button_9"
        android:layout_toRightOf="@+id/button_9"
        android:layout_alignRight="@id/result_text"
        android:layout_toEndOf="@+id/button_9"
        android:background="#263238"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/button_minus"
        android:layout_alignTop="@+id/button_6"
        android:layout_toRightOf="@+id/button_6"
        android:layout_alignRight="@id/button_plus"
        android:layout_toEndOf="@+id/button_6"
        android:background="#263238"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="*"
        android:id="@+id/button_times"
        android:layout_alignTop="@+id/button_3"
        android:layout_toRightOf="@+id/button_3"
        android:layout_toEndOf="@+id/button_3"
        android:layout_alignRight="@id/button_minus"
        android:background="#263238"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="/"
        android:id="@+id/button_divide"
        android:layout_below="@+id/button_times"
        android:layout_toRightOf="@+id/button_equals"
        android:layout_toEndOf="@+id/button_equals"
        android:layout_alignRight="@id/button_times"
        android:layout_alignBottom="@+id/button_equals"
        android:background="#263238"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/button_ac"
        android:layout_above="@+id/button_8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_plus"
        android:layout_alignEnd="@+id/button_plus"
        android:background="#263238"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made with love by Eder Vs."
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:textColor="#ffffff"/>
</RelativeLayout>
